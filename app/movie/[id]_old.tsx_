    runtimeMinutes: null,
    releaseYear: null,
    genres: [],
    plot: '',
    directorName: '',
    actors: []
  };
  
  // Delete confirmation modal
  const DeleteConfirmationModal = () => (
    <Modal isOpen={showDeleteModal} onClose={cancelDelete}>
      <ModalBackdrop />
      <ModalContent>
        <ModalHeader>
          <Heading size="lg">Delete Movie</Heading>
          <ModalCloseButton>
            <MaterialIcons name="close" size={24} color={isDark ? "white" : "black"} />
