              style={{ width: '100%', height: '100%' }}
              contentFit="cover"
              cachePolicy="memory-disk"
              priority="high"
            />
          ) : (
            <Box
              bg={isDark ? '$backgroundDark800' : '$backgroundLight100'}
              height="100%"
              alignItems="center"
              justifyContent="center"
            >
