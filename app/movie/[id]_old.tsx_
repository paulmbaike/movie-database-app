            bottom={0}
            left={0}
            right={0}
            height={120}
            style={{
              backgroundColor: isDark ? '#000000' : '#FFFFFF',
              opacity: 0.6,
            }}
          />
        </Box>
        
        <RNScrollView 
          showsVerticalScrollIndicator={false} 
          contentContainerStyle={{ paddingBottom: 150 }}
          style={{ flex: 1 }}
        >
